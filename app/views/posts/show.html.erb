<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<hr>

<%= form_with(model: [@post, Comment.new], local: true) do |form| %>
	<%= form.label :content %>
	<%= form.text_area :content %> <br>
	<%= form.submit 'comentario' %>
<% end %>

<ul>
	<% @post.comments.each do |comments| %>
	<li> <%= comments.content %> 
		<%= link_to 'Eliminar', post_comment_path(@post, comments.id), method: :delete %>
		<%= link_to 'Editar', edit_post_comment_path(@post, comments) %>
	</li>

	<% end %>
</ul>
